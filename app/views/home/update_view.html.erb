<div class="container">
    <h3>수정하기</h3>
    <form action="/update_action/<%= @onePost.id %>" method="POST" class="col s12">
      <div class="row">
        <div class="input-field col s12">
          <input name="inputName" id="name" type="text" class="validate" value="<%= @onePost.dbName %>">
        </div>
        <div class="input-field col s12">
          <input name="inputTitle" id="title" type="text" class="validate" value="<%= @onePost.dbTitle %>">
        </div>
        <div class="input-field col s12">
          <textarea name="inputContent" id="textarea1" class="materialize-textarea"><%= @onePost.dbContent %></textarea>
        </div>
        <button class="btn waves-effect waves-light" type="submit" name="action">수정</button>
      </div>
    </form>
</div>


